                <td>
                    @Html.DisplayFor(modelItem => item.Medida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataOrdemCarregamento)
                </td>
                <td>
                    <a asp-action="Recibo" asp-route-id="@item.OrdemCarregamentoId">Recibo</a> |
                    <a asp-action="Details" asp-route-id="@item.OrdemCarregamentoId">Carregamento</a>
