
@model IEnumerable<FreteFree.Models.Motorista.OrdemCarregamento>

@{
    ViewData["Title"] = "Historico";
}

<h1>Historico de Carregamento</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataOrdemCarregamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           
            <tr>
                @*<td>
                    <input type="checkbox" value="@Html.DisplayFor(modelItem => item.OrdemCarregamentoId)" />
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa.CidadeEmpresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motorista.CaminhaoProprietario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataOrdemCarregamento)
                </td>
                <td>
                    <a asp-action="Recibo" asp-route-id="@item.OrdemCarregamentoId">Recibo</a> |
                    <a asp-action="Details" asp-route-id="@item.OrdemCarregamentoId">Carregamento</a>
                </td>
            </tr>
        }
    </tbody>
</table>
